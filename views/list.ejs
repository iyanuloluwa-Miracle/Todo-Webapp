<%- include('header'); -%>
<div class="box" id="heading">
  <h1><%= listTitle%></h1>
</div>
<div class="box">
  <!--Using for each loop to loop through the items  -->
  <% newListItems.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        value="<%=item._id%>"
        name="checkbox"
        onchange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
    <input name="listName" type="hidden" value="<%= listTitle %>"></form>
  </form>

  <%}) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%=listTitle%>">+</button>
  </form>
</div>
<%- include('footer'); -%>
